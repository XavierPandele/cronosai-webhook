# Configuración de Base de Datos
# Copia este archivo como .env y configura tus valores

# Opción 1: MySQL/MariaDB
DB_HOST=localhost
DB_USER=tu_usuario
DB_PASSWORD=tu_password
DB_NAME=sistema_reservas
DB_PORT=3306

# Opción 2: PostgreSQL (usar DATABASE_URL en lugar de las variables individuales)
# DATABASE_URL=postgresql://usuario:password@host:puerto/database

# Opción 3: SQLite (para desarrollo local)
# DB_PATH=./reservas.db

# Configuración de la Aplicación
NODE_ENV=production
PORT=3000

# Configuración de Reservas
MIN_ADVANCE_HOURS=2
MAX_PEOPLE=20
MAX_RESERVATIONS_PER_DAY=50

# Configuración de Email (opcional, para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_app

# Configuración de Twilio (opcional, para SMS)
TWILIO_ACCOUNT_SID=tu_account_sid
TWILIO_AUTH_TOKEN=tu_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Configuración de Seguridad
JWT_SECRET=tu_jwt_secret_muy_seguro
ENCRYPTION_KEY=tu_clave_de_encriptacion

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# URLs de la Aplicación
FRONTEND_URL=https://tu-dominio.vercel.app
API_URL=https://tu-dominio.vercel.app/api

# Configuración de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configuración de Backup (opcional)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
