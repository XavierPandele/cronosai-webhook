# ============================================
# CONFIGURACIÓN DE VERTEX AI
# ============================================
# Vertex AI Configuration
VERTEX_AI_PROJECT_ID=tu-project-id
VERTEX_AI_LOCATION=us-central1

# Service Account Credentials (JSON completo como string)
# IMPORTANTE: Reemplaza con tu JSON completo de Service Account
# Puedes obtenerlo desde Google Cloud Console > IAM & Admin > Service Accounts > Keys
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"tu-project-id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Opcional: API Key de Google (ya no necesario con Vertex AI, pero puedes mantenerlo si lo usas en otra parte)
# GOOGLE_API_KEY=tu_api_key_aqui

# ============================================
# CONFIGURACIÓN DE DIALOGFLOW (si lo usas)
# ============================================
PROJECT_ID=tu-project-id
LOCATION=eu
AGENT_ID=tu-agent-id

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# ============================================
DB_HOST=tu-host
DB_PORT=3306
DB_NAME=tu-database
DB_USER=tu-usuario
DB_PASS=tu-password

# ============================================
# CONFIGURACIÓN DE EMAIL
# ============================================
# Opción 1: SMTP (Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password

# Opción 2: SendGrid (recomendado para producción)
# SENDGRID_API_KEY=tu_sendgrid_api_key
# SENDGRID_FROM_EMAIL=contact@usecronos.com
# CONTACT_EMAIL=tu_email_personal@gmail.com

# Opción 3: Mailgun
# MAILGUN_API_KEY=tu_mailgun_api_key
# MAILGUN_DOMAIN=usecronos.com

# ============================================
# CONFIGURACIÓN ADICIONAL
# ============================================
NODE_ENV=development
